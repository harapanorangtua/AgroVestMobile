<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrasi"
    android:orientation="vertical"
    android:background="@drawable/bg_login">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="30dp"
        android:elevation="8dp">

        <View
            android:layout_width="297dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_logdep"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:background="@drawable/icon_log"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrasi"
            android:textSize="25sp"
            android:padding="30sp"
            android:textStyle="bold"
            android:layout_marginTop="85dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join us and start your journey."
            android:textSize="15sp"
            android:padding="30sp"
            android:layout_marginTop="120dp"/>

        <EditText
            android:id="@+id/etnama"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Masukan Nama Anda"
            android:background="@drawable/input"
            android:ems="10"
            android:paddingStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="185dp"/>

        <RadioGroup
            android:id="@+id/rgjekel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="225dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin :"
                android:layout_marginLeft="35sp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"/>
            <RadioButton
                android:id="@+id/rblaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-Laki"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/rbperempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Perempuan"
                android:layout_marginRight="40dp"
                android:layout_weight="1"/>
        </RadioGroup>

        <EditText
            android:id="@+id/etusia"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:hint="Masukan Usia"
            android:background="@drawable/input"
            android:ems="10"
            android:paddingStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="270dp"/>

        <EditText
            android:id="@+id/etuser"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Masukan Username"
            android:background="@drawable/input"
            android:ems="10"
            android:paddingStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="325dp"/>

        <EditText
            android:id="@+id/etpass"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:hint="Masukan Password"
            android:background="@drawable/input"
            android:ems="10"
            android:paddingStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="380dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reg"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Registrasi"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="445dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Sudah Punya Akun?"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="500dp"/>

        <TextView
            android:id="@+id/etlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Login"
            android:textColor="@color/blue"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="500dp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>